@bot.message_handler(commands=['start'])
def cmd_start(message):
    cid = message.chat.id
    name = message.from_user.first_name
    
    # KullanÄ±cÄ± daha Ã¶nce kayÄ±tlÄ± mÄ±?
    conn = db._get_conn()
    c = conn.cursor()
    c.execute("SELECT * FROM users WHERE user_id=?", (str(cid),))
    existing = c.fetchone()
    conn.close()
    
    if existing:
        # Eski kullanÄ±cÄ± - âœ… Klavye menÃ¼sÃ¼ ekle
        msg = tg_conf.MESSAGES["welcome_old"].format(name=name)
        bot.send_message(cid, msg, parse_mode="Markdown", 
                        reply_markup=create_keyboard_menu())  # â† YENÄ°
        bot.send_message(cid, "Ana MenÃ¼:", reply_markup=tg_conf.create_main_menu())
    else:
        # Yeni kullanÄ±cÄ± - Trial seÃ§imi sun
        now = datetime.datetime.now()
        is_weekend = now.weekday() >= 5
        day_name = get_day_name_tr(now.weekday())
        
        welcome_msg = tg_conf.MESSAGES["welcome_new"].format(name=name)
        
        if is_weekend:
            choice_msg = tg_conf.MESSAGES["trial_choice_weekend"].format(day_name=day_name)
        else:
            choice_msg = tg_conf.MESSAGES["trial_choice_weekday"].format(day_name=day_name)
        
        full_msg = welcome_msg + "\n\n" + choice_msg
        
        bot.send_message(cid, full_msg, parse_mode="Markdown", 
                        reply_markup=tg_conf.create_trial_choice_menu(is_weekend))

