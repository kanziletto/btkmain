                msg = tg_conf.MESSAGES["trial_started_now"].format(
                    start_date=start.strftime("%d.%m.%Y %H:%M"),
                    expiry_date=expiry.strftime("%d.%m.%Y %H:%M")
                )
                # âœ… Klavye menÃ¼sÃ¼nÃ¼ de gÃ¶nder
                bot.send_message(cid, msg, parse_mode="Markdown", reply_markup=create_keyboard_menu())
                bot.edit_message_reply_markup(cid, call.message.message_id, reply_markup=tg_conf.create_main_menu())
            else:
                bot.answer_callback_query(call.id, "Zaten kayÄ±tlÄ±sÄ±nÄ±z!", show_alert=True)
        
        elif data == "trial_start_monday":
            success, start, expiry = db.register_user_scheduled(cid, start_monday=True)
