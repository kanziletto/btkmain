            bot.edit_message_text("ğŸ—‘ï¸ Silinecek domaini seÃ§in:", cid, call.message.message_id, reply_markup=markup)
        
        elif data == "ekle":
            status = db.check_user_access(cid)
            if not status["access"]:
                bot.answer_callback_query(call.id, status['msg'], show_alert=True)
                return
            
            user_adding_domain.add(cid)
            bot.send_message(cid, tg_conf.MESSAGES["add_prompt"])
            
    except Exception as e:
        print(f"Callback Hata: {e}")

